    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "lerna": "^4.0.0",
    "mocha": "^9.2.2",
    "mocha-play": "^3.1.0",
    "playwright-chromium": "^1.21.1",
