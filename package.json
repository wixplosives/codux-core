{
  "name": "@wixc3/wcs-core",
  "version": "2.0.5",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "scripts": {
    "clean": "rimraf cjs esm",
    "lint": "eslint . -f codeframe",
    "prebuild": "yarn clean",
    "build": "yarn build:cjs && yarn build:esm",
    "build:cjs": "tsc -p tsconfig.build.json --module commonjs --outDir cjs",
    "build:esm": "tsc -p tsconfig.build.json --module esnext --outDir esm",
    "pretest": "yarn typecheck && yarn lint",
    "test": "yarn test:unit",
    "test:unit": "mocha-play \"test/**/*.spec.ts?(x)\"",
    "typecheck": "tsc --noEmit",
    "prepack": "yarn build",
    "prettify": "npx prettier \"src/**/*.{js,ts,tsx}\" --write"
  },
  "peerDependencies": {
    "react": ">=16.0.0",
    "react-dom": ">=16.0.0"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "cjs",
    "esm",
    "src"
  ],
  "devDependencies": {
    "@ts-tools/node": "^2.1.1",
    "@ts-tools/webpack-loader": "^2.1.1",
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.2",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "chai": "^4.3.4",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "^5.3.1",
    "mocha": "^8.3.2",
    "mocha-play": "^1.0.1",
    "playwright-chromium": "^1.9.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "typescript": "~4.2.3",
    "webpack": "^5.27.2"
  },
  "repository": "https://github.com/wixplosives/wcs-core"
}
