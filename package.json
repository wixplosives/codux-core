    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "lerna": "^5.0.0",
    "mocha": "^10.0.0",
    "mocha-play": "^3.1.0",
    "playwright-chromium": "^1.22.2",
    "react": "^18.1.0",
