    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "lerna": "^4.0.0",
    "mocha": "^9.2.1",
    "mocha-play": "^3.0.2",
    "playwright-chromium": "^1.19.1",
